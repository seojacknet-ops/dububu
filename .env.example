# ===========================================
# DUBUBU E-COMMERCE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your values
# Stack: Next.js 14+ | Convex | Clerk | Stripe | PayPal | Printful

# ===========================================
# APP CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# CONVEX DATABASE (Required)
# ===========================================
# Get from https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL="https://your-deployment.convex.cloud"
CONVEX_DEPLOY_KEY="prod:xxx"

# ===========================================
# CLERK AUTHENTICATION (Required)
# ===========================================
# Get from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxx"
CLERK_SECRET_KEY="sk_test_xxx"

# Clerk URLs (optional, defaults work for most setups)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# ===========================================
# STRIPE PAYMENTS (Required)
# ===========================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===========================================
# PAYPAL PAYMENTS (Required)
# ===========================================
# Get from https://developer.paypal.com
NEXT_PUBLIC_PAYPAL_CLIENT_ID="xxx"
PAYPAL_CLIENT_SECRET="xxx"
PAYPAL_MODE="sandbox" # sandbox or live

# ===========================================
# VENDOR INTEGRATION
# ===========================================

# Printful (Print-on-demand) - Required for POD products
# Get from https://www.printful.com/dashboard/developer/apps
PRINTFUL_API_KEY=""
PRINTFUL_WEBHOOK_SECRET=""

# CJDropshipping (Optional - for dropship products)
# Get from https://developers.cjdropshipping.com/
CJDROPSHIPPING_API_KEY=""
CJDROPSHIPPING_EMAIL=""
CJDROPSHIPPING_PASSWORD=""

# ===========================================
# EMAIL (Required - Resend)
# ===========================================
# Get from https://resend.com
RESEND_API_KEY="re_xxx"
ADMIN_EMAIL="admin@dububu.com"

# ===========================================
# LEGACY FIREBASE (To be removed)
# ===========================================
# These are kept for backwards compatibility during migration
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=""
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""
FIREBASE_SERVICE_ACCOUNT_KEY=""

# Legacy Auth (To be removed)
NEXTAUTH_SECRET=""
NEXTAUTH_URL=""

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# AI Image Generation
FAL_KEY=""

# Google Gemini API
GEMINI_API_KEY=""

# Tenor GIF API
TENOR_API_KEY=""
